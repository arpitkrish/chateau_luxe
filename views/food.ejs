      margin-bottom: 1rem;
      line-height: 1.5;
    }

    .food-price {
      font-size: 1.5rem;
      font-weight: 800;
      color: #f5576c;
      margin-bottom: 1rem;
    }

    .food-category {
      display: inline-block;
      background: rgba(245, 87, 108, 0.1);
      color: #f5576c;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 1rem;
    }

    .btn-order {
      background: var(--secondary-gradient);
