<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Chateau Luxe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    :root {
      --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      --luxury-dark: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
      --glass-bg: rgba(255, 255, 255, 0.95);
      --glass-border: rgba(255, 255, 255, 0.2);
      --shadow-luxury: 0 20px 40px rgba(0,0,0,0.1);
      --shadow-hover: 0 25px 50px rgba(0,0,0,0.15);
      --transition-smooth: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      overflow-x: hidden;
      min-height: 100vh;
    }

    /* Enhanced Navigation */
    .navbar {
      background: var(--luxury-dark) !important;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--glass-border);
      box-shadow: 0 2px 20px rgba(0,0,0,0.1);
      padding: 1rem 0;
      transition: var(--transition-smooth);
    }

    .navbar-brand {
      font-weight: 700 !important;
      font-size: 1.5rem !important;
      text-shadow: 0 2px 4px rgba(0,0,0,0.3);
      transition: var(--transition-smooth);
    }

    .navbar-brand:hover {
      transform: scale(1.05);
    }

    .navbar-brand img {
      border: 2px solid rgba(255,255,255,0.3) !important;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      transition: var(--transition-smooth);
    }

    .navbar-brand img:hover {
      border-color: rgba(255,255,255,0.6);
      transform: rotate(5deg);
    }

    .nav-link {
      font-weight: 600 !important;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      transition: var(--transition-smooth) !important;
      position: relative;
      overflow: hidden;
    }

    .nav-link::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 2px;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      transition: width 0.3s ease;
    }

    .nav-link:hover::before {
      width: 100%;
    }

    .nav-link.active {
      color: #f5576c !important;
    }

    .dropdown-menu {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      box-shadow: var(--shadow-luxury);
      border-radius: 10px;
      margin-top: 0.5rem;
    }

    .dropdown-item {
      transition: var(--transition-smooth);
    }

    .dropdown-item:hover {
      background: var(--secondary-gradient);
      color: white;
      transform: translateX(5px);
    }

    /* Dashboard Header */
    .dashboard-header {
      background: var(--primary-gradient);
      color: white;
      padding: 4rem 0;
      text-align: center;
      position: relative;
      overflow: hidden;
      margin-bottom: 3rem;
    }

    .dashboard-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dashboard-pattern" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23dashboard-pattern)"/></svg>');
      animation: patternMove 20s linear infinite;
    }

    @keyframes patternMove {
      from { transform: translateX(0) translateY(0); }
      to { transform: translateX(20px) translateY(20px); }
    }

    .dashboard-header h1 {
      font-size: 3rem;
      font-weight: 700;
      text-shadow: 0 4px 8px rgba(0,0,0,0.3);
      position: relative;
      z-index: 1;
      margin-bottom: 1rem;
    }

    .dashboard-header p {
      font-size: 1.2rem;
      opacity: 0.9;
      position: relative;
      z-index: 1;
      max-width: 600px;
      margin: 0 auto;
    }

    .welcome-badge {
      display: inline-block;
      background: rgba(255,255,255,0.2);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 50px;
      padding: 0.5rem 1.5rem;
      margin-top: 1rem;
      font-weight: 600;
      animation: fadeInUp 1s ease-out;
    }

    /* Service Cards */
    .service-card {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      box-shadow: var(--shadow-luxury);
      transition: var(--transition-smooth);
      overflow: hidden;
      position: relative;
      margin-bottom: 2rem;
      height: 100%;
      cursor: pointer;
    }

    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--secondary-gradient);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .service-card:hover::before {
      opacity: 1;
    }

    .service-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: var(--shadow-hover);
    }

    .service-icon {
      position: relative;
      overflow: hidden;
      height: 120px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    }

    .service-icon img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid rgba(255,255,255,0.8);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      transition: var(--transition-smooth);
    }

    .service-card:hover .service-icon img {
      transform: scale(1.1) rotate(5deg);
      border-color: white;
    }

    .service-card .card-body {
      padding: 2rem;
      text-align: center;
    }

    .service-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #2d3748;
      margin-bottom: 1rem;
      transition: color 0.3s ease;
    }

    .service-card:hover .service-title {
      color: #667eea;
    }

    .service-description {
      color: #718096;
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }

    .service-btn {
      background: var(--secondary-gradient);
      border: none;
      border-radius: 25px;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      transition: var(--transition-smooth);
      position: relative;
      overflow: hidden;
      width: 100%;
    }

    .service-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s;
    }

    .service-btn:hover::before {
      left: 100%;
    }

    .service-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(245, 87, 108, 0.3);
    }

    /* Quick Stats */
    .stats-section {
      background: white;
      border-radius: 20px;
      padding: 2rem;
      margin: 3rem 0;
      box-shadow: var(--shadow-luxury);
    }

    .stat-card {
      text-align: center;
      padding: 1.5rem;
      border-radius: 15px;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
      transition: var(--transition-smooth);
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.2);
    }

    .stat-number {
      font-size: 2.5rem;
      font-weight: 800;
      color: #667eea;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      color: #718096;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    /* Animations */
    .fade-in-up {
      animation: fadeInUp 0.8s ease-out;
    }

    .stagger-animation {
      animation: fadeInUp 0.8s ease-out;
      animation-fill-mode: both;
    }

    .stagger-animation:nth-child(1) { animation-delay: 0.1s; }
    .stagger-animation:nth-child(2) { animation-delay: 0.2s; }
    .stagger-animation:nth-child(3) { animation-delay: 0.3s; }
    .stagger-animation:nth-child(4) { animation-delay: 0.4s; }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .dashboard-header h1 {
        font-size: 2rem;
      }

      .service-card {
        margin-bottom: 1.5rem;
      }

      .stats-section {
        padding: 1.5rem;
      }

      .stat-card {
        margin-bottom: 1rem;
      }
    }
  </style>
</head>
<body>
  <!-- Enhanced Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="Chateau Luxe" height="40">
        Chateau Luxe
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/dashboard">
              <i class="fas fa-tachometer-alt me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="rooms-nav">
              <i class="fas fa-bed me-1"></i>Rooms
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="menu-nav">
              <i class="fas fa-utensils me-1"></i>Dining
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="facilities-nav">
              <i class="fas fa-spa me-1"></i>Facilities
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="bookings-nav">
              <i class="fas fa-calendar-check me-1"></i>My Bookings
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="orders-nav">
              <i class="fas fa-shopping-cart me-1"></i>My Orders
            </a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if (user) { %>
            <!-- User Profile Dropdown -->
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-2"></i><%= user.name || user.email %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="#" id="profile-nav">
                  <i class="fas fa-user me-2"></i>View Profile
                </a></li>
                <li><a class="dropdown-item" href="#" id="settings-nav">
                  <i class="fas fa-cog me-2"></i>Settings
                </a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#" onclick="logout()">
                  <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Dashboard Header -->
  <section class="dashboard-header">
    <div class="container">
      <h1 class="fade-in-up">Welcome to Your Dashboard</h1>
      <p class="fade-in-up">Experience luxury at your fingertips. Manage your bookings, orders, and preferences all in one place.</p>
      <div class="welcome-badge fade-in-up">
        <i class="fas fa-crown me-2"></i>Premium Member
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <div class="container">
    <div class="stats-section fade-in-up">
      <div class="row text-center">
        <div class="col-md-3 col-6">
          <div class="stat-card">
            <div class="stat-number" id="totalBookings">0</div>
            <div class="stat-label">Total Bookings</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card">
            <div class="stat-number" id="totalOrders">0</div>
            <div class="stat-label">Food Orders</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card">
            <div class="stat-number" id="loyaltyPoints">0</div>
            <div class="stat-label">Loyalty Points</div>
          </div>
        </div>
        <div class="col-md-3 col-6">
          <div class="stat-card">
            <div class="stat-number" id="memberSince">0</div>
            <div class="stat-label">Days Member</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Service Cards -->
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6">
        <div class="service-card stagger-animation">
          <div class="service-icon">
            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=120&h=120&fit=crop&crop=center" alt="Rooms">
          </div>
          <div class="card-body">
            <h5 class="service-title">
              <i class="fas fa-bed me-2 text-primary"></i>Book a Room
            </h5>
            <p class="service-description">Reserve your luxurious room with world-class amenities and breathtaking views.</p>
            <button class="service-btn">
              <i class="fas fa-calendar-plus me-2"></i>Book Now
            </button>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="service-card stagger-animation">
          <div class="service-icon">
            <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=120&h=120&fit=crop&crop=center" alt="Dining">
          </div>
          <div class="card-body">
            <h5 class="service-title">
              <i class="fas fa-utensils me-2 text-danger"></i>Order Food
            </h5>
            <p class="service-description">Indulge in our exquisite culinary creations prepared by master chefs.</p>
            <button class="service-btn">
              <i class="fas fa-shopping-cart me-2"></i>Order Now
            </button>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="service-card stagger-animation">
          <div class="service-icon">
            <img src="https://images.unsplash.com/photo-1530549387789-4c1017266635?w=120&h=120&fit=crop&crop=center" alt="Facilities">
          </div>
          <div class="card-body">
            <h5 class="service-title">
              <i class="fas fa-spa me-2 text-success"></i>Book Facilities
            </h5>
            <p class="service-description">Access premium facilities including spa, gym, pool, and conference rooms.</p>
            <button class="service-btn">
              <i class="fas fa-calendar-check me-2"></i>Book Now
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row mt-5">
      <div class="col-lg-6">
        <div class="stats-section fade-in-up">
          <h4 class="mb-4">
            <i class="fas fa-clock me-2 text-primary"></i>Recent Activity
          </h4>
          <div id="recentActivity" class="mb-0">
            <div class="text-center py-4">
              <i class="fas fa-spinner fa-spin fa-2x text-muted mb-3"></i>
              <p class="text-muted">Loading recent activity...</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="stats-section fade-in-up">
          <h4 class="mb-4">
            <i class="fas fa-star me-2 text-warning"></i>Quick Actions
          </h4>
          <div class="d-grid gap-3">
            <button class="btn btn-outline-primary">
              <i class="fas fa-list me-2"></i>View All Bookings
            </button>
            <button class="btn btn-outline-success">
              <i class="fas fa-receipt me-2"></i>View Order History
            </button>
            <button class="btn btn-outline-info">
              <i class="fas fa-user-edit me-2"></i>Update Profile
            </button>
            <button class="btn btn-outline-warning" id="support-nav">
              <i class="fas fa-headset me-2"></i>Contact Support
            </button>
          </div>
        </div>
      </div>
    </div>

    <div id="content" class="mt-5"></div>
  </div>

  <script src="/js/dashboard.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Logout function -->
  <script>
    function logout() {
      fetch('/api/auth/logout', {
        method: 'POST',
        credentials: 'same-origin'
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/';
        } else {
          alert('Logout failed');
        }
      })
      .catch(error => {
        console.error('Logout error:', error);
        alert('Logout failed');
      });
    }
  </script>
</body>
</html>