  <!-- Logout function -->
  <script>
    function logout() {
      fetch('/api/auth/logout', {
        method: 'POST',
        credentials: 'include'
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/';
        } else {
          alert('Logout failed');
        }
      })
      .catch(error => {
        console.error('Logout error:', error);
        alert('Logout failed');
      });
    }

    // Load admin data
    document.addEventListener('DOMContentLoaded', function() {
      loadAdminData();
    });

    // Function to load admin data
    async function loadAdminData() {
      try {
        const response = await fetch('/api/admin/bookings', {
          method: 'GET',
          credentials: 'same-origin',
          headers: {
            'Content-Type': 'application/json'
          }
        });

        if (!response.ok) {
          throw new Error('Failed to fetch admin data');
        }

        const data = await response.json();

        // Render room bookings
        renderRoomBookings(data.bookings);

        // Render facility bookings
        renderFacilityBookings(data.facilityBookings);

        // Render food orders
        renderFoodOrders(data.orders);

      } catch (error) {
        console.error('Error loading admin data:', error);
        showError('Failed to load admin data. Please try again.');
      }
    }

    // Function to render room bookings
    function renderRoomBookings(bookings) {
      const container = document.getElementById('roomBookingsContainer');

      if (!bookings || bookings.length === 0) {
        container.innerHTML = `
          <div class="text-center py-5">
            <i class="fas fa-bed fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">No Room Bookings</h3>
            <p class="text-muted">There are no room bookings to display.</p>
          </div>
        `;
        return;
      }

      let html = '';
      bookings.forEach((booking, index) => {
        const statusClass = `status-${booking.status}`;
        const checkInDate = new Date(booking.checkIn).toLocaleDateString('en-IN');
        const checkOutDate = new Date(booking.checkOut).toLocaleDateString('en-IN');
        const createdDate = new Date(booking.createdAt).toLocaleDateString('en-IN');

        html += `
          <div class="admin-card stagger-animation">
            <div class="admin-card-header">
              <h5 class="admin-card-title">
                <i class="fas fa-bed me-2"></i>
                ${booking.room.name} - ${booking.room.type}
              </h5>
              <p class="admin-card-subtitle">Booking ID: ${booking._id}</p>
            </div>
            <div class="admin-card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-user me-2"></i>Customer:</strong> ${booking.user.name} (${booking.user.email})
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-calendar me-2"></i>Check-in:</strong> ${checkInDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-calendar-check me-2"></i>Check-out:</strong> ${checkOutDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-users me-2"></i>Guests:</strong> ${booking.guests}
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-rupee-sign me-2"></i>Total Price:</strong> ₹${booking.totalPrice.toLocaleString()}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-clock me-2"></i>Booked on:</strong> ${createdDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-credit-card me-2"></i>Payment:</strong>
                    <span class="badge ${booking.paymentStatus === 'paid' ? 'bg-success' : 'bg-warning'}">${booking.paymentStatus}</span>
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-info-circle me-2"></i>Status:</strong>
                    <span class="status-badge ${statusClass}">${booking.status}</span>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end gap-2">
                ${booking.status === 'pending' ? `
                  <button class="btn btn-confirm btn-action" onclick="updateBookingStatus('${booking._id}', 'confirmed')">
                    <i class="fas fa-check me-2"></i>Confirm
                  </button>
                  <button class="btn btn-cancel btn-action" onclick="updateBookingStatus('${booking._id}', 'cancelled')">
                    <i class="fas fa-times me-2"></i>Cancel
                  </button>
                ` : booking.status === 'confirmed' ? `
                  <button class="btn btn-cancel btn-action" onclick="updateBookingStatus('${booking._id}', 'cancelled')">
                    <i class="fas fa-times me-2"></i>Cancel
                  </button>
                ` : ''}
              </div>
            </div>
          </div>
        `;
      });

      container.innerHTML = html;
    }

    // Function to render facility bookings
    function renderFacilityBookings(bookings) {
      const container = document.getElementById('facilityBookingsContainer');

      if (!bookings || bookings.length === 0) {
        container.innerHTML = `
          <div class="text-center py-5">
            <i class="fas fa-spa fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">No Facility Bookings</h3>
            <p class="text-muted">There are no facility bookings to display.</p>
          </div>
        `;
        return;
      }

      let html = '';
      bookings.forEach((booking, index) => {
        const statusClass = `status-${booking.status}`;
        const bookingDate = new Date(booking.date).toLocaleDateString('en-IN');
        const createdDate = new Date(booking.createdAt).toLocaleDateString('en-IN');

        html += `
          <div class="admin-card stagger-animation">
            <div class="admin-card-header">
              <h5 class="admin-card-title">
                <i class="fas fa-spa me-2"></i>
                ${booking.facility.name} - ${booking.facility.type}
              </h5>
              <p class="admin-card-subtitle">Booking ID: ${booking._id}</p>
            </div>
            <div class="admin-card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-user me-2"></i>Customer:</strong> ${booking.user.name} (${booking.user.email})
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-calendar me-2"></i>Date:</strong> ${bookingDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-clock me-2"></i>Time Slot:</strong> ${booking.timeSlot}
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-rupee-sign me-2"></i>Price:</strong> ₹${booking.facility.price.toLocaleString()}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-clock me-2"></i>Booked on:</strong> ${createdDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-credit-card me-2"></i>Payment:</strong>
                    <span class="badge ${booking.paymentStatus === 'paid' ? 'bg-success' : 'bg-warning'}">${booking.paymentStatus}</span>
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-info-circle me-2"></i>Status:</strong>
                    <span class="status-badge ${statusClass}">${booking.status}</span>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end gap-2">
                ${booking.status === 'pending' ? `
                  <button class="btn btn-confirm btn-action" onclick="updateFacilityBookingStatus('${booking._id}', 'confirmed')">
                    <i class="fas fa-check me-2"></i>Confirm
                  </button>
                  <button class="btn btn-cancel btn-action" onclick="updateFacilityBookingStatus('${booking._id}', 'cancelled')">
                    <i class="fas fa-times me-2"></i>Cancel
                  </button>
                ` : booking.status === 'confirmed' ? `
                  <button class="btn btn-cancel btn-action" onclick="updateFacilityBookingStatus('${booking._id}', 'cancelled')">
                    <i class="fas fa-times me-2"></i>Cancel
                  </button>
                ` : ''}
              </div>
            </div>
          </div>
        `;
      });

      container.innerHTML = html;
    }

    // Function to render food orders
    function renderFoodOrders(orders) {
      const container = document.getElementById('foodOrdersContainer');

      if (!orders || orders.length === 0) {
        container.innerHTML = `
          <div class="text-center py-5">
            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">No Food Orders</h3>
            <p class="text-muted">There are no food orders to display.</p>
          </div>
        `;
        return;
      }

      let html = '';
      orders.forEach((order, index) => {
        const createdDate = new Date(order.createdAt).toLocaleDateString('en-IN');

        html += `
          <div class="admin-card stagger-animation">
            <div class="admin-card-header">
              <h5 class="admin-card-title">
                <i class="fas fa-utensils me-2"></i>
                Order #${order._id.slice(-8).toUpperCase()}
              </h5>
              <p class="admin-card-subtitle">Order ID: ${order._id}</p>
            </div>
            <div class="admin-card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-user me-2"></i>Customer:</strong> ${order.user.name} (${order.user.email})
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-clock me-2"></i>Ordered on:</strong> ${createdDate}
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-credit-card me-2"></i>Payment:</strong>
                    <span class="badge ${order.paymentStatus === 'paid' ? 'bg-success' : 'bg-warning'}">${order.paymentStatus}</span>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <strong><i class="fas fa-shopping-cart me-2"></i>Items:</strong>
                    <ul class="list-unstyled">
                      ${order.items.map(item => `
                        <li>${item.food.name} x${item.quantity} - ₹${(item.price * item.quantity).toLocaleString()}</li>
                      `).join('')}
                    </ul>
                  </div>
                  <div class="mb-3">
                    <strong><i class="fas fa-rupee-sign me-2"></i>Total Price:</strong> ₹${order.totalPrice.toLocaleString()}
                  </div>
                </div>
              </div>
            </div>
          </div>
        `;
      });

      container.innerHTML = html;
    }

    // Function to update booking status
    async function updateBookingStatus(bookingId, status) {
      try {
        const response = await fetch(`/api/admin/bookings/${bookingId}/status`, {
          method: 'PUT',
          credentials: 'same-origin',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ status })
        });

        if (!response.ok) {
          throw new Error('Failed to update booking status');
        }

        const data = await response.json();
        showSuccess(data.message);
        loadAdminData(); // Reload data

      } catch (error) {
        console.error('Error updating booking status:', error);
        showError('Failed to update booking status. Please try again.');
      }
    }

    // Function to update facility booking status
    async function updateFacilityBookingStatus(bookingId, status) {
      try {
        const response = await fetch(`/api/admin/facility-bookings/${bookingId}/status`, {
          method: 'PUT',
          credentials: 'same-origin',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ status })
        });

        if (!response.ok) {
          throw new Error('Failed to update facility booking status');
        }

        const data = await response.json();
        showSuccess(data.message);
        loadAdminData(); // Reload data

      } catch (error) {
        console.error('Error updating facility booking status:', error);
        showError('Failed to update facility booking status. Please try again.');
      }
    }

    // Function to show success message
    function showSuccess(message) {
      // Create toast notification
      const toast = document.createElement('div');
      toast.className = 'alert alert-success alert-dismissible fade show position-fixed';
      toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
      toast.innerHTML = `
        <i class="fas fa-check-circle me-2"></i>${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      document.body.appendChild(toast);

      // Auto remove after 5 seconds
      setTimeout(() => {
        toast.remove();
      }, 5000);
    }

    // Function to show error message
    function showError(message) {
      // Create toast notification
      const toast = document.createElement('div');
      toast.className = 'alert alert-danger alert-dismissible fade show position-fixed';
      toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
      toast.innerHTML = `
        <i class="fas fa-exclamation-triangle me-2"></i>${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      document.body.appendChild(toast);

      // Auto remove after 5 seconds
      setTimeout(() => {
        toast.remove();
      }, 5000);
    }
  </script>
