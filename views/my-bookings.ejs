  <!-- Logout function -->
  <script>
    function logout() {
      fetch('/api/auth/logout', {
        method: 'POST',
        credentials: 'include'
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/';
        } else {
          alert('Logout failed');
        }
      })
      .catch(error => {
        console.error('Logout error:', error);
        alert('Logout failed');
      });
    }

    // Check if we need to refresh bookings data
    document.addEventListener('DOMContentLoaded', function() {
      const shouldRefresh = sessionStorage.getItem('refreshBookings');
      if (shouldRefresh) {
        sessionStorage.removeItem('refreshBookings');
        // Refresh after a short delay to ensure database is updated
        setTimeout(() => {
          // Reload the page to get fresh data
          window.location.reload();
        }, 1000);
      }
    });
  </script>
